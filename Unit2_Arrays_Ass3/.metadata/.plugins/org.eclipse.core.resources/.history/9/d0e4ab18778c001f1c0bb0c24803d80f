#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {
    // Write C code here
    char str[1000];
    char find;
    int i,count=0;
    printf("Enter string : ");
    gets(str);
    printf("\nEnter character to find frequency : ");
    scanf("%c",&find);
    for(i=0;i<1000;i++)
    {
        if(str[i]==find)
        count++;
    }
    printf("\n Frequency of %c = %d" ,find,count);

    return 0;
}
