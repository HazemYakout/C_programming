#include <stdio.h>
#include <stdlib.h>
int main(void) {
        int r,c;
        float arr_1[2][2];
        float arr_2[2][2];
        float sum [2][2];
        printf("Enter the first matrix :\n");
        for(r=0;r<2;r++)
        {
            for(c=0;c<2;c++)
            {
            printf("a[%d][%d]:",r+1,c+1);
            scanf("%f",&arr_1[r]);}
        }
        printf("Enter the second matrix :\n");
        for(r=0;r<2;r++)
        {
            for(c=0;c<2;c++)
            {
            printf("a[%d][%d]:",r+1,c+1);
            scanf("%f",&arr_2[r]);
            }
        }

        for(r=0;r<2;r++)
        {
            for(c=0;c<2;c++)
            {
            sum[r][c]=arr_1[r][c]+arr_2[r][c];
            printf("a[%d][%d] = %.2f\t",r+1,c+1,sum[r][c]);
            }
            printf("\n");
        }

    return 0;
}
