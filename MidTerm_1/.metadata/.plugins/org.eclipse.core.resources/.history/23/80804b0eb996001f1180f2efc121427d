#include <math.h>
#include <stdio.h>
#include <stdlib.h>

int main(void)
{
	int num;
	fflush(stdin);fflush(stdout);
	printf("Enter a number : %d",num);
	fflush(stdin);fflush(stdout);
	scanf("%d",&num);
	fflush(stdin);fflush(stdout);
	printf("Enter a number : %d", sqr(num));
	fflush(stdin);fflush(stdout);
}
float sqr(int num)
{
	float x =pow(num,0.5);
	return x;
}
