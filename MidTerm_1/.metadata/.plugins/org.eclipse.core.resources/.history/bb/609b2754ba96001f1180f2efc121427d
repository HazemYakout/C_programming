#include <math.h>
#include <stdlib.h>
#include <stdio.h>

float SquareRoot(int num);
int main ()
{
	int num ;
	printf ("\nEnter a number to find its square root: ");
	fflush(stdin);	fflush(stdout);
	scanf ("%d", &num);
	printf ("\nThe square root of %.3lf is: %.3lf.", num, SquareRoot(num) );

	return 0;
}
float SquareRoot(int num)
{
	return sqrt(num);
}
