#include <stdio.h>
#include <stdlib.h>

int main(void)
{	float x=0;
	printf("Enter a integer :");
	fflush(stdout);fflush(stdin);
	scanf("%f",&x);
	fflush(stdout);fflush(stdin);
	printf("you entered : %d",x);
	fflush(stdout);fflush(stdin);
}
