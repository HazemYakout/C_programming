#include <stdio.h>
#include <stdlib.h>

int main(void)
{
	int x ;
	printf("enter an integer you want to check :\n");
	if(x%2==0)
	{
		scanf("%d",&x);
		printf("%d is even",x);
	}
	else
		printf("%d is odd",x);

}
